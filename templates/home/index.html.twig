{% extends 'layout.html.twig' %}

{% block body %}

<section class="main-text text-titles">

  <p style="text-align: center;">
      Bâtissons ensemble les piliers fondamentaux de votre entreprise
      <div style="text-align:center;">Stratégie<br/>Marketing<br/>R&D et Innovation</div>
  </p>

</section>

<section class="sections" id="services" style="background-color: #ffffff85 !important;">
  <p class="text-titles text-center">Services</p>
  <div class="row">
    {% for service in services %}
    <div class="col-md-4 text-titles" style="font-size: 20px;text-align:center;">
      <a href="/prestation/{{service.id}}">
        <div class="block-item-service">
          <p><img src="{{ asset(service.image.url) }}" class="icon-img"/></p>
          <p>{{service.name}}</p>
        </div>
      </a>
    </div>
    {% endfor %}
  </div>
</section>

<section class="sections" id="a-propos">
    <p class="text-titles text-center">A propos</p>
    <div class="row">
      <div class="col-sm-6">
        <p class="text-titles text-center">Ahmad ALIZADEH</p>
        <div class="display-flex-center">
          <img src="{{asset('img/persona.jpg')}}" style="max-width: 80%" />
        </div>
      </div>
      <div class="col-sm-6">
        <p class="text-titles" style="margin-top: 55px;font-size: 25px;padding: 0px 30px;">
          38 années passées au sein d’entreprises majeures de l’industrie automobile dans un environnement international et multiculturel (expatriation US, Europe, Canada) à des postes de direction R&D, Marketing et projets innovation.
        </p>
      </div>
    </div>
</section>

{% if publications is not empty %}
<section class="sections" id="publications" style="background-color: #ffffff85 !important;">
  <div id="blog" class="blog-area">
    <div class="blog-inner area-padding">
      <div class="blog-overly"></div>
      <div class="container ">
        <div class="row">
          <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="section-headline text-center">
              <h2 class="text-titles text-center" style="padding: 10px 0px;">Publications</h2>
            </div>
          </div>
        </div>
        <div class="row">
        {% if publications is not empty %}
          {% for publication in publications %}
            <div class="col-md-4 col-sm-4 col-xs-12">
              <div class="single-blog">
                <div class="single-blog-img">
                  <a href="/publication/{{publication.id}}">
                      <img src="{{asset(publication.image.url)}}" alt="" style="width: 100%;height: 180px;">
                    </a>
                </div>
                <div class="blog-text">
                  <h4>
                      <a href="/publication/{{publication.id}}" class="text-titles" style="font-size: 1.5rem;text-shadow:none;">{{publication.title}}</a>
                    </h4>
                  <p>
                    {{publication.content|slice(0, 300)|raw}}
                  </p>
                </div>
                <span>
                    <a href="/publication/{{publication.id}}" class="ready-btn">Voir plus</a>
                  </span>
              </div>
            </div>
          {% endfor %}
        {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>
{% endif %}

{% if events is not empty %}
<section class="sections" id="evenements">
  <div id="blog" class="blog-area">
    <div class="blog-inner area-padding">
      <div class="blog-overly"></div>
      <div class="container ">
        <div class="row">
          <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="section-headline text-center">
              <h2 class="text-titles text-center" style="padding: 10px 0px;">Evênements</h2>
            </div>
          </div>
        </div>
        <div class="row">
        {% for event in events %}
          <div class="col-md-4 col-sm-4 col-xs-12">
            <div class="single-blog">
              <div class="single-blog-img">
                <a href="/evenement/{{event.id}}">
										<img src="{{asset(event.image.url)}}" alt="" style="width: 100%;height: 180px;">
									</a>
              </div>
              <div class="blog-text">
                <h4>
                    <a href="/evenement/{{event.id}}" class="text-titles" style="font-size: 1.5rem;text-shadow:none;">{{event.title}}</a>
									</h4>
                <p>
                  {{ event.content|slice(0, 300)|raw }}
                </p>
              </div>
              <span>
									<a href="/evenement/{{event.id}}" class="ready-btn">Voir plus</a>
								</span>
            </div>
          </div>
        {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>
{% endif %}

<section  class="sections" id="contact" style="background-color: #ffffff85 !important;">
  <!-- Start contact Area -->
  <div id="contact" class="contact-area" style="width: 100%;">
    <div class="contact-inner area-padding">
      <div class="contact-overly"></div>
      <div class="container ">
        <div class="row">
          <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="section-headline text-center">
              <h2 class="text-titles text-center" style="padding: 10px 0px;">Contactez-moi</h2>
            </div>
          </div>
        </div>
        <div class="row">
          <!-- Start contact icon column -->
          <div class="col-md-4 col-sm-4 col-xs-12">
            <div class="contact-icon text-center">
              <div class="single-icon">
                <i class="fa fa-mobile"></i>
                <p class="text-content">
                  Téléphone: +33 6 23 51 47 12<br>
                  <span>Lundi-Vendredi (9H-18H)</span>
                </p>
              </div>
            </div>
          </div>
          <!-- Start contact icon column -->
          <div class="col-md-4 col-sm-4 col-xs-12">
            <div class="contact-icon text-center">
              <div class="single-icon">
                <i class="fa fa-envelope-o"></i>
                <p class="text-content">
                  Email: contact@aa-consulting.fr<br>
                  <span>www.aa-consulting.fr</span>
                </p>
              </div>
            </div>
          </div>
          <!-- Start contact icon column -->
          <div class="col-md-4 col-sm-4 col-xs-12">
            <div class="contact-icon text-center">
              <div class="single-icon">
                <i class="fa fa-map-marker"></i>
                <p class="text-content">
                  Adresse: 5 Rue JOSE MARIA DE HEREDIA<br>
                  <span>75007 PARIS FRANCE</span>
                </p>
              </div>
            </div>
          </div>
        </div>
        <div class="row">

          <!-- Start Google Map -->
          <div class="col-md-6 col-sm-6 col-xs-12">
            <!-- Start Map -->
            <iframe src="https://maps.google.com/maps?width=700&amp;height=440&amp;hl=en&amp;q=5%20Rue%20JOSE%20MARIA%20DE%20HEREDIA%2C%20PAris+(AAC)&amp;ie=UTF8&amp;t=&amp;z=14&amp;iwloc=B&amp;output=embed" width="100%" height="380" frameborder="0" style="border:0" allowfullscreen></iframe>
            <!-- End Map -->
          </div>
          <!-- End Google Map -->

          <!-- Start  contact -->
          <div class="col-md-6 col-sm-6 col-xs-12">
            <div class="form contact-form">
              <div id="sendmessage" style="color:green"></div>
              <div id="errormessage"></div>
              <form action="" method="post" role="form" class="contactForm">
                <div class="form-group">
                  <input type="text" name="name" class="form-control" id="name" placeholder="Votre Nom" data-rule="minlen:4" data-msg="Please enter at least 4 chars" />
                  <div class="validation"></div>
                </div>
                <div class="form-group">
                  <input type="email" class="form-control" name="email" id="email" placeholder="Votre Email" data-rule="email" data-msg="Please enter a valid email" />
                  <div class="validation"></div>
                </div>
                <div class="form-group">
                  <input type="text" class="form-control" name="subject" id="subject" placeholder="Sujet" data-rule="minlen:4" data-msg="Please enter at least 8 chars of subject" />
                  <div class="validation"></div>
                </div>
                <div class="form-group">
                  <textarea class="form-control" name="message" rows="5" data-rule="required" data-msg="Please write something for us" placeholder="Message"></textarea>
                  <div class="validation"></div>
                </div>
                <div class="text-center"><button type="submit">Envoyer</button></div>
              </form>
            </div>
          </div>
          <!-- End Left contact -->
        </div>
      </div>
    </div>
  </div>
  <!-- End Contact Area -->
</section>

<style>
.nav-link:hover{
  text-shadow: 1px 1px 3px #6C6C6C;
}
.sections{
  min-height: 475px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 25px 0px;
}
.block-item-service{
  width:80%;
  margin: auto;
  cursor:pointer;
}
.block-item-service:hover{
  background-color:#00000014;
}
.icon-img{
  width: 100px;
  height: 100px;
}
</style>
{% endblock %}

